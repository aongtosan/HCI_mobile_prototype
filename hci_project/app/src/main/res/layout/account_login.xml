<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account_login"
    android:background="@drawable/background_login"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView4"
            tools:ignore="ContentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_person_pin_24" />

        <Button
            android:layout_marginTop="10dp"
            android:textColor="@color/dark"
            android:id="@+id/login_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tufont"
            android:onClick="toDashboard"
            android:background="@drawable/custom_button"
            android:text="@string/login" />
        <Button
            android:id="@+id/logout_here"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/use_another_account"
            android:background="@drawable/custom_button2"
            android:fontFamily="@font/tufont"
            android:textColor="@color/white"
            android:onClick="use_another_account"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>